
@model IEnumerable<BlogMvcApp.Models.Blog>

@if (Model.Count()==0)
{
    <div class="alert alert-danger" >
        <h3>Kayıt Bulunamadı.</h3>
    </div>
}
else
{



    <div class="list-group">
        <div class="list-group-item list-group-item-primary">Blog Listesi</div>

        @foreach (var item in Model)
        {
            <a href="/Blogs" class="list-group-item list-group-item">@item.Title</a>
            @Html.ActionLink("Details", "Details", "Blogs", new { id = item.BlogID }, new { @class = "btn btn-primary" });
        }
    </div>
}